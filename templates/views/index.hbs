<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" href="/img/icon.png">
        <link rel="stylesheet" href="/css/styles.css" />
        <title>Weather</title>
    </head>
    <body>
        <div class="main-content">
        {{>header}}
        <p>Use this to search for your desired location</p>
        <form>
        <input type="text" placeholder="Eg.- Mumbai"/>
        <button onclick="clicked='search'">Search</button>
        <button onclick="clicked='getLocation'">Get my location</button>
        </form>

        <img id="weather-icon" src="/img/transparent.png" alt="weather icon">
        <p id="message-one"></p>
        <p id="message-two"></p>
        </div>
        {{>footer}}

        <script src="/js/app.js"></script>
    </body>
</html>